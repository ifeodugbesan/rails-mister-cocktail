<div class="container">
  <div class="row">
      <h1 class="text-center">New Cocktail</h1>
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for [ @cocktail ], html: { class: "show-form" } do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add Cocktail", class: "btn btn-danger", id: "sweet-alert-demo" %>
      <% end %>
      <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>
