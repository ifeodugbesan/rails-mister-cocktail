<div class="container">
  <div class="row">
    <h1 class="text-center"><%= @cocktail.name %></h1>
    <div class="links">
      <div class="back">
        <i class="fas fa-undo-alt"></i>
        <%= link_to 'Back', cocktails_path %>
      </div>
      <div class="add">
        <i class="fas fa-plus"></i>
        <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
      <hr>
    <div class="col-sm-4 col-sm-offset-2">
      <% @doses.each do |dose| %>
        <ul class="list-unstyled">
          <li><%= dose.description %> - <%= dose.ingredient.name %> <br>
          <%= link_to 'Delete ingredient', dose_path(dose) ,method: "delete" %>
          </li>
        </ul>
      <% end %>
    </div>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>
  <hr>
</div>
