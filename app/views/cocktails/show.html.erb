<div class="drinks" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @cocktail.photo %>');">
  <h1><%= @cocktail.name %></h1>
  <div class="rating-title">
    <% unless @average_rating == nil %>
      <strong><%= @average_rating.round(1) %></strong>
      <% case @average_rating.to_i %>
      <% when 1 %>
        <i class="fas fa-star stars"></i>
      <% when 2 %>
        <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i>
      <% when 3 %>
        <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i>
      <% when 4 %>
        <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i>
      <% when 5 %>
        <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i>
      <% end %>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="links">
      <div class="back">
        <i class="fas fa-undo-alt"></i>
        <%= link_to 'Back', cocktails_path %>
      </div>
    </div>
      <hr>
    <div class="col-sm-4 col-sm-offset-1">
      <ul class="list-unstyled">
        <li><strong>Ingredients</strong>
        (<%= @doses.length %>)
        </li>
        <hr>
        <% @doses.each do |dose| %>
          <li>
            <%= link_to dose_path(dose) , method: "delete", id: "delete" do %>
            <i class="far fa-trash-alt"></i>
            <% end %> | <%= dose.description %> - <%= dose.ingredient.name %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-4 col-sm-offset-1">
      <ul class="list-unstyled">
        <li class="review-title">
          <strong>Add Ingredient</strong>
        </li>
        <hr>
        <%= simple_form_for [ @cocktail, @dose ], html: { class: "show-form" } do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit "Add ingredient", class: "btn btn-danger", id: "add-ingredient" %>
        <% end %>
      </ul>
    </div>
  </div>
  <hr>
    <div class="row">
    <div class="col-sm-4 col-sm-offset-1">
      <ul class="list-unstyled">
        <li><strong>Add Review</strong></li>
      </ul>
      <hr>
      <%= simple_form_for [ @cocktail, @review ], html: { class: "show-form" } do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: ['1','2','3','4','5'] %>
        <%= f.submit "Add review", class: "btn btn-danger", id: "add-review" %>
      <% end %>
    </div>
    <div class="col-sm-4 col-sm-offset-1">
      <ul class="list-unstyled">
        <li class="review-title">
          <strong>Reviews</strong>
          (<%= @reviews.length %>)
        </li>
        <hr>
        <% unless @reviews.nil? %>
          <% @reviews.each do |review| %>
            <% case review.rating %>
            <% when "1" %>
              <i class="fas fa-star stars"></i><br><br>
              <li>
                <%= review.content %><br><br>
                <%= link_to review_path(review), method: "delete", id: "delete" do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
              <hr>
            <% when "2" %>
              <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><br><br>
              <li>
                <%= review.content %><br><br>
                <%= link_to review_path(review), method: "delete", id: "delete" do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
              <hr>
            <% when "3" %>
              <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><br><br>
              <li>
                <%= review.content %><br><br>
                <%= link_to review_path(review), method: "delete", id: "delete" do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
              <hr>
            <% when "4" %>
              <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><br><br>
              <li>
                <%= review.content %><br><br>
                <%= link_to review_path(review), method: "delete", id: "delete" do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
              <hr>
            <% when "5" %>
              <i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><i class="fas fa-star stars"></i><br><br>
              <li>
                <%= review.content %><br><br>
                <%= link_to review_path(review), method: "delete", id: "delete" do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
              <hr>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
